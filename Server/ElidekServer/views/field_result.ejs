<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title> <%= pageTitle %> </title>
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    
</head>

<body>
    
    <%- include("includes/navbar.ejs")%>

    <div class="container">
        <div class="row" id="row">
            <a class="btn btn-primary" id="show-btn" href="/field/hot">Select other field</a><br>
            <p>Project and Researchers in <%=field%>:</p>
        </div>
        <div class="row" id="row">
            <div class="col-md-12">
                <div class="card" id="card-container-big">
                    <div class="card-body" id="card">
                    <% if (result.length == 0) { %> 
                        <h1 style="margin-top: 5rem;">No projects and researchers in <%=field%></h1>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Field</th>
                                        <th>Project ID</th>
                                        <th>Project</th>
                                        <th>Researcher First Name</th>
                                        <th>Researcher Last name</th>
                                        <th>Researcher ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% result.forEach((res, _) => { %>
                                        <tr>
                                            <td><%= res.field_name %></td>
                                            <td><%= res.project_id %></td>
                                            <td><%= res.title %></td>
                                            <td><%= res.name %></td>
                                            <td><%= res.last_name %></td>
                                            <td><%= res.researcher_id %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
  
</body>

</html>